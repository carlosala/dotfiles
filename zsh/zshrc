### VARIABLES
export CARGO_BUILD_JOBS="$(nproc --ignore=2)"
export EDITOR="nvim"
export GPG_TTY=$TTY
export MANPAGER="nvim +Man!"
export OPENCV_LOG_LEVEL="ERROR"
export PATH="$PATH:/home/carlo/.cargo/bin"
export PATH="$PATH:/home/carlo/.local/bin"
export XZ_DEFAULTS="-T0"
export ZSHZ_CASE="ignore"

### OPTIONS
setopt hist_find_no_dups
setopt hist_reduce_blanks

### OMZ
export ZSH="/home/carlo/.oh-my-zsh"
ZSH_THEME="carlosala"
plugins=(aliases fzf git git-prompt nvm rbw sudo yarn z)
zstyle ':omz:plugins:nvm' lazy yes
zstyle ':omz:update' mode auto
zstyle ':omz:update' frequency 1
source "$ZSH/oh-my-zsh.sh"

### KITTY STUFF
if test -n "$KITTY_INSTALLATION_DIR"; then
  export KITTY_SHELL_INTEGRATION="enabled"
  autoload -Uz -- "$KITTY_INSTALLATION_DIR"/shell-integration/zsh/kitty-integration
  kitty-integration
  unfunction kitty-integration
fi

### ALIASES
alias c="clear"
alias e="exit"
alias l="exa -la --group-directories-first --icons"
alias v="openNvim"
alias bc="bc -l"
alias cdot="~/Documents/dev/dotfiles/copyconfig.sh"
alias gsui="git submodule update --init"
alias gsuir="git submodule update --init --remote"
alias kssh="kitty +kitten ssh"
alias ldk="lazydocker"
alias lg="lazygit"
alias sage="sage --notebook=jupyter"
alias torrentrackers="curl -s https://raw.githubusercontent.com/ngosang/trackerslist/master/trackers_best_ip.txt | clipcopy"
alias yupl="yarn upgrade --latest"
