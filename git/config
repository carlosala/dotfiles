[alias]
  shallow = "!f() { printf 'Enter to continue '; read _; git pull --depth 1; git gc --prune=now; }; f"

[commit]
  gpgSign = true

[core]
  pager = delta

[delta]
  light = false
  navigate = true
  features = side-by-side

[diff]
  colorMoved = default

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[init]
  defaultBranch = main

[interactive]
  diffFilter = delta --color-only --features=interactive

[merge]
  conflictStyle = diff3

[pull]
  rebase = true

[push]
  followTags = true

[tag]
  gpgSign = true

