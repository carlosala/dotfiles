[alias]
  shallow = "!f() { printf 'Enter to continue '; read _; git pull --depth 1; git gc --prune=now; }; f"

[commit]
  gpgSign = true

[core]
  pager = diff-so-fancy | less -x2 -SRF

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[init]
  defaultBranch = main

[interactive]
  diffFilter = diff-so-fancy --patch

[pull]
  rebase = true

[push]
  followTags = true

[tag]
  gpgSign = true

