[commit]
  gpgSign = true

[core]
  pager = delta

[delta]
  features = side-by-side
  hunk-header-style = omit
  light = false
  navigate = true

[delta "lazygit"]
  side-by-side = false

[diff]
  colorMoved = default

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[init]
  defaultBranch = main

[interactive]
  diffFilter = delta --color-only --features=interactive

[merge]
  conflictStyle = diff3

[rebase]
  autoStash = true

[pull]
  rebase = true

[submodule]
  fetchJobs = 0

[tag]
  gpgSign = true

