{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "html",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "markdown",
    "typescript",
    "yaml"
  ],
  "texlab.build.onSave": true,
  "texlab.build.args": ["%f", "-pdf", "-interaction=nonstopmode", "-synctex=1"],
  "texlab.build.forwardSearchAfter": true,
  "texlab.forwardSearch.args": ["--synctex-forward", "%l:1:%f", "%p"],
  "texlab.forwardSearch.executable": "zathura",
  "texlab.chktex.onOpenAndSave": false
}
